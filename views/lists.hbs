<div class="container">
    <nav class="navbar navbar-expand-xl navbar-dark bg-dark pmd-navbar pmd-z-depth fixed-top">
        <a class="navbar-brand" href="#">App To-DO List Node</a>
        <div class="dropdown pmd-dropdown pmd-user-info ml-auto">
            <a href="javascript:void(0);" class="btn-user dropdown-toggle media align-items-center"
                style="text-decoration: none; color: white" data-toggle="dropdown" data-sidebar="true"
                aria-expanded="false">
                <img style="border-radius: 5px;" src="{{user.image}}" width="40" height="40" alt="avatar">
                <div class="media-body">
                    {{user.displayName}}
                </div>
            </a>
            <ul class="dropdown-menu dropdown-menu-right" role="menu">
                <a class="dropdown-item" href="/logout">Logout</a>
            </ul>
        </div>
    </nav>
    <div class="col-sm-6">
        <div class="form-group">
            <h1>To-Do <small>List</small></h1>
            <form role="form" action="/lists" method="POST">
                <input type="text" hidden="true" class="form-control" id="id" value={{user.id}} name="user">
                <input type="text" class="form-control" placeholder="Your List Name" name="task">
                <button type="submit" class="btn btn btn-primary">Add</button>
            </form>

        </div>
        <div></div>
        <ul class="list-unstyled" id="todo">
            {{#each lists}}
            <li>
<p><b>
                <form role="form" action="/lists/{{this.id}}/edit" method="POST">
                    <input type="text" hidden class="form-control" value={{user}} name="user">
                    <input type="text" class="form-control" value={{this.listName}} name="list">
                    <button type="submit" class="btn btn-info">Editar</button>
                </form>

                <form role="form" action="/tasks/{{this.id}}" method="GET">
                    <input type="text" hidden class="form-control" value={{user}} name="user">
                    <button type="submit" class="btn btn-secondary">Tarefas</button>
                </form>


                <form role="form" action="/lists/{{this.id}}/remove" method="POST">
                    <input type="text" hidden class="form-control" value={{user}} name="user">
                    <button type="submit" class="btn btn-danger">Remover</button>
                </form>
</b></p>
                {{!-- <a href="/tasks/{{this.id}}"><b>{{this.listName}}</b></a><a href="/lists/{{this.id}}/remove">Remover</a><a>Editar</a></p> --}}
            </li>
            {{/each}}

        </ul>
    </div>
</div>